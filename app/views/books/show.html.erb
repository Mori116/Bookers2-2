<h2>User info</h2>
<p>image</p>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<p><%= link_to "edit", edit_user_path(@user) %></p>

<h2>New book</h2>
<%= form_with model: @new_book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit"Create Book" %>
<% end %>

<h2>Books detail</h2>
<tr>
  <td>
    image
    <%= @book_user.name %>
  </td>
  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  <td><%= link_to "Edit", edit_book_path(@book) %></td>
  <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
</tr>